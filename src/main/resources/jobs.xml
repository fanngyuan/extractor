<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
          http://www.springframework.org/schema/context
          http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <bean id="dailyStatServiceDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 指定任务类 -->
        <property name="targetObject" ref="dailyStatService" />
        <!-- 指定任务执行的方法 -->
        <property name="targetMethod" value="stat" />
    </bean>
    <bean id="dailyStatServiceTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="dailyStatServiceDetail" />
        <!-- 每天凌晨3点运行一次 -->
        <property name="cronExpression" value="0 0 3 * * ?" />
    </bean>

    <bean id="dailyStreamStatServiceDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 指定任务类 -->
        <property name="targetObject" ref="dailyStreamStatService" />
        <!-- 指定任务执行的方法 -->
        <property name="targetMethod" value="stat" />
    </bean>
    <bean id="dailyStreamStatServiceTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="dailyStreamStatServiceDetail" />
        <!-- 每天凌晨3点运行一次 -->
        <property name="cronExpression" value="0 0 3 * * ?" />
    </bean>

    <bean id="logAnalyzerDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 指定任务类 -->
        <property name="targetObject" ref="analyzer" />
        <!-- 指定任务执行的方法 -->
        <property name="targetMethod" value="flush" />
    </bean>
    <bean id="logAnalyzerTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="logAnalyzerDetail" />
        <!-- 每5分钟一次 -->
        <property name="cronExpression" value="0 */5 * * * ?" />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="dailyStatServiceTrigger" />
                <ref bean="logAnalyzerTrigger"></ref>
                <ref bean="dailyStreamStatServiceTrigger"/>
            </list>
        </property>
    </bean>

</beans>